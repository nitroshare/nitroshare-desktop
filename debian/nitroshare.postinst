#!/bin/bash

# Test if UFW is installed
which ufw > /dev/null
if [ $? -eq 0 ]; then

    # If so, check to see if it is enabled
    ufw status | grep -i inactive > /dev/null
    if [ $? -ne 0 ]; then

        # It is enabled, add NitroShare exception
        echo "UFW enabled; allowing NitroShare through..."
        ufw allow NitroShare
    fi
fi
